<resources>

  <style name="Theme.FastScrollSample" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <!-- If you set this in your theme, all FastScroll(Thumb)Views will use this style by default -->
    <item name="recyclerFastScrollStyle">@style/Widget.FastScrollSample.FastScroll</item>
    <item name="recyclerFastScrollThumbStyle">@style/Widget.FastScrollSample.FastScrollThumb</item>
  </style>

  <!-- See the parent styles for more attributes -->

  <style name="Widget.FastScrollSample.FastScroll" parent="@style/Widget.RecyclerFastScroll.FastScroll">
    <item name="iconColor">@color/pressed_selector</item>
    <item name="android:textColor">@color/pressed_selector</item>
  </style>

  <style name="Widget.FastScrollSample.FastScroll.Floating">
    <item name="iconColor">?colorAccent</item>
    <item name="android:textColor">?colorAccent</item>
    <item name="android:background">@drawable/fastscroll_floating_background</item>
    <item name="android:elevation">2dp</item>
  </style>

  <style name="Widget.FastScrollSample.FastScrollThumb" parent="@style/Widget.RecyclerFastScroll.FastScrollThumb" />

  <style name="Widget.FastScrollSample.FastScrollThumb.Colorful">
    <item name="thumbColor">?colorAccent</item>
  </style>

</resources>
